@using SteamAuth.Models;

@model long?
@{
  /**/

  ViewBag.Title = "Home Page";

}

<div class="jumbotron">
  <h1>Steam authentication</h1>
  <p class="lead">Hopefully this works</p>
  @Html.ActionLink("Authenticate with Steam", "AuthoriseSteam", null, new { @class = "btn btn-primary btn-lg" })
</div>


@if (Model != null)
{
  <h2>Steam ID</h2>
  <p>@Model</p>
}

<br>

<div class="container">
  <div class="row">
    @{
      var data = ViewData["inventory"] as InventoryViewModel;

      if (data != null)
      {
        int i = 0;
        foreach (var item in data.descriptions)
        {
          <div class="col-md-2">            
            <a href="#" class="thumbnail">
              @item.name
              <img src="https://steamcommunity-a.akamaihd.net/economy/image/@item.icon_url" alt="96x96" style="width: 96px; height: 96px;">
            </a>            
          </div>

          if (i == 5)
          {
            @Html.Raw("</div>");
            @Html.Raw("<div class=\"row\">");
          }
          i = (i == 5) ? 0 : i + 1;
        }
      }
    }
  </div>
</div>